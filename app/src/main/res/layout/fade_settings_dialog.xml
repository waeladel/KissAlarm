<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:padding="20dp">

  <TextView
      android:id="@+id/volume_start_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      />

  <android.support.v7.widget.AppCompatSeekBar
      android:id="@+id/volume_start_sb"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

  <TextView
      android:id="@+id/volume_end_tv"
      android:text="@string/volume_end"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      />

  <android.support.v7.widget.AppCompatSeekBar
      android:id="@+id/volume_end_sb"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

    <TextView
        android:id="@+id/volume_duration_tv"
        android:text="@string/volume_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/volume_duration_sb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>
