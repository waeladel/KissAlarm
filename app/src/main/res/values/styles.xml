<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="SliderText" parent="@android:style/TextAppearance.Small">
  	<item name="android:textSize">20sp</item>
  	<item name="android:textStyle">italic</item>

  </style>
    <style name="AppThemeDark" parent="Theme.AppCompat">
      <item name="customAddIcon">@drawable/ic_menu_add_light</item>
      <item name="customDeleteIcon">@drawable/ic_menu_delete</item>
      <item name="customSettingsItemTitle">@color/white</item>
      <item name="customTimeIcon">@drawable/ic_dialog_time</item>
      <item name="customDivider">@android:drawable/divider_horizontal_dark</item>
      <item name="customTitlePageIndicatorText">@color/white</item>
      <item name="customTitlePageIndicatorSelectedText">@color/white</item>
      <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
      <item name="customAppBarOverlay">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
      <item name="customPopupOverlay">@style/ThemeOverlay.AppCompat.Dark</item>
      <item name="customCardBackgroundColor">@color/card_view_black</item>
    </style>

  <style name="AppThemeLight" parent="Theme.AppCompat.Light">
    <item name="customAddIcon">@drawable/ic_menu_add</item>
    <item name="customDeleteIcon">@drawable/ic_menu_delete_light</item>
    <item name="customSettingsItemTitle">@android:color/black</item>
    <item name="customTimeIcon">@drawable/ic_dialog_time_light</item>
    <item name="customDivider">@android:drawable/divider_horizontal_bright</item>
    <item name="customTitlePageIndicatorText">@android:color/black</item>
    <item name="customTitlePageIndicatorSelectedText">@android:color/black</item>
    <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    <item name="customAppBarOverlay">@style/Theme.AppCompat.Light</item>
    <item name="customPopupOverlay">@style/ThemeOverlay.AppCompat.Light</item>
    <item name="customCardBackgroundColor">@color/card_view_white</item>
  </style>

  <style name="AppThemeLightDarkActionBar"
         parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="customAddIcon">@drawable/ic_menu_add</item>
    <item name="customDeleteIcon">@drawable/ic_menu_delete</item>
    <item name="customSettingsItemTitle">@android:color/black</item>
    <item name="customTimeIcon">@drawable/ic_dialog_time_light</item>
    <item name="customDivider">@android:drawable/divider_horizontal_bright</item>
    <item name="customTitlePageIndicatorText">@android:color/black</item>
    <item name="customTitlePageIndicatorSelectedText">@android:color/black</item>
    <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    <item name="customAppBarOverlay">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    <item name="customPopupOverlay">@style/ThemeOverlay.AppCompat.Light</item>
    <item name="customCardBackgroundColor">@color/card_view_white</item>
  </style>

  <style name="AppThemeLightNoActionBar"
         parent="Theme.AppCompat.Light.NoActionBar">
    <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
  </style>

  <style name="MainAppThemeDark" parent="AppThemeDark" >
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="MainAppThemeLight" parent="AppThemeLight" >
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="MainAppThemeLightDarkActionBar" parent="AppThemeLightDarkActionBar" >
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

</resources>
